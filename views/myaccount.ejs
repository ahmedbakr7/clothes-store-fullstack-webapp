<body>
  <!-- Navbar -->
  <%- include("./partials/navbar.ejs") %>
  <!-- end of header -->

  <!-- Main -->
  <section class="p-5">
    <div class="container d-flex justify-content-center">
      <div class="wrapper">

        <div class="form-box login">
          <h2>Login</h2>
          <!-- replace action with the place you want to send the data to and then replace it in post methon in app.js -->
          <form action="/Accounts/login" method="post">
            <div class="input-box">
              <span class="icon"><ion-icon name="mail"></ion-icon></span>
              <input type="email" id="email" name="email" required>
              <label>Email</label>
            </div>
            <div class="input-box">
              <span class="icon"><ion-icon name="lock-closed"></ion-icon></span>
              <input type="password" id="password" name="password" required>
              <label>Password</label>
            </div>
            <div class="remember-forgot">
              <label><input type="checkbox">Remember me</label>
              <a href="#">Forgot Password?</a>
            </div>
            <button type="submit" class="btn">Login</button>
            <div class="login-register">
              <p>Don't have an account? <a href="#" class="register-link">Register</a></p>
            </div>
            <!-- added processinput with default value to know if the user wants to login or sign up -->
            <input type="text" name="process" value="login" style="display: none;">
          </form>
        </div>

        <div class="form-box register">
          <h2>Registration</h2>
          <form action="/Accounts/register" method="post">
            <div class="input-box">
              <span class="icon"><ion-icon name="person"></ion-icon></span>
              <input type="text" id="username" name="username" required>
              <label>Username</label>
            </div>
            <div class="input-box">
              <span class="icon"><ion-icon name="mail"></ion-icon></span>
              <input type="emaillogin" id="emaillogin" name="emaillogin" required>
              <label>Email</label>
            </div>
            <div class="input-box">
              <span class="icon"><ion-icon name="lock-closed"></ion-icon></span>
              <input type="passwordlogin" id="passwordlogin" name="passwordlogin" required>
              <label>Password</label>
            </div>
            <div class="remember-forgot">
              <label><input type="checkbox">I agree to the terms & conditions</label>
            </div>
            a<button type="submit" class="btn" >Register</button>
            <div class="login-register">
              <p>Already have an account? <a href="#" class="login-link">Login</a></p>
            </div>
             <!-- added processinput with default value to know if the user wants to login or sign up -->
            <input type="text" name="process" value="signup" style="display: none;">
          </form>
        </div>

      </div>
    </div>
  </section>


  <!-- Footer -->
  <%- include("./partials/footer.ejs") %>

